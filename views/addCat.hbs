<h1 class="center-align">Добавить Питомца</h1>
<div class="row">
    <form class="col s12" action="/addCat" method="POST">
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <input id="breed" name="breed" type="text" class="validate">
                <label for="breed">Порода</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <input id="weight" name="weight" type="number" class="validate">
                <label for="weight">Вес</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <input id="age" name="age" type="number" class="validate">
                <label for="age">Возраст</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <input id="price"  name="price" type="number" class="validate">
                <label for="price">Цена</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <input id="image" name="image" type="text" class="validate">
                <label for="image">Фотография</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field s3 offset-s3">
                <textarea id="description" name = "description" class="materialize-textarea"></textarea>
                <label for="description">Описание Породы</label>
            </div>
        </div>

        <div class="row center-align">
            <button class="btn-large btn-primary">Добавить</button>
        </div>
    </form>
</div>